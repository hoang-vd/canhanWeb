<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="emailListPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- Use JNDI DataSource configured in context.xml -->
        <non-jta-data-source>java:comp/env/jdbc/murach</non-jta-data-source>

        <class>murach.business.User</class>

        <properties>
            <!-- Hibernate dialect for PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <!-- Show SQL for debugging (disable in production) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <!-- Force Hibernate to quote all identifiers so PascalCase columns are preserved -->
            <property name="hibernate.globally_quoted_identifiers" value="true"/>
            <!-- Validate schema (can switch to update/create-drop for dev) -->
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
        </properties>
    </persistence-unit>

    <!-- Persistence unit for Exercise 13-2 User Admin (Supabase) -->
    <persistence-unit name="userAdminPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- Direct JDBC properties (override with env/system props in deployment) -->
        <class>model.chuong13ex2_User</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <!-- Replace HOST, DB, USER, PASS with environment or context.xml if preferred -->
            <property name="javax.persistence.jdbc.url" value="${SUPABASE_JDBC_URL}"/>
            <property name="javax.persistence.jdbc.user" value="${SUPABASE_DB_USER}"/>
            <property name="javax.persistence.jdbc.password" value="${SUPABASE_DB_PASSWORD}"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <!-- Supabase often requires SSL -->
            <property name="hibernate.connection.provider_disables_autocommit" value="true"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            <!-- If needing SSL params, embed in JDBC URL or use below custom props -->
        </properties>
    </persistence-unit>
</persistence>